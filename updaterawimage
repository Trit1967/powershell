# Get version with PowerShell
Get-AppxPackage Microsoft.RawImageExtension | Select-Object Name, Version

# Get the current installation details
$app = Get-AppxPackage Microsoft.RawImageExtension

# Re-register the app to update it
Add-AppxPackage -Register "$($app.InstallLocation)\AppxManifest.xml" -DisableDevelopmentMode -ForceApplicationShutdown


# Get version with PowerShell
Get-AppxPackage Microsoft.RawImageExtension | Select-Object Name, Version

winget install Microsoft.RawImageExtension --accept-source-agreements --accept-package-agreements

winget install Microsoft.RawImageExtension --accept-source-agreements --accept-package-agreements --location "US"

powershell# Get Microsoft Store app details using PowerShell
$StoreApp = Get-AppxPackage -Name Microsoft.RawImageExtension
$StoreApp | Select-Object Name, Publisher, Version, InstallLocation


# Reset the Microsoft Store cache first
Get-AppxPackage Microsoft.WindowsStore | ForEach-Object {Add-AppxPackage -DisableDevelopmentMode -Register "$($_.InstallLocation)\AppxManifest.xml"}

# Then upgrade the Movies & TV app
Get-AppxPackage Microsoft.ZuneVideo | ForEach-Object {Add-AppxPackage -DisableDevelopmentMode -Register "$($_.InstallLocation)\AppxManifest.xml"}
